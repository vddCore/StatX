<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="WindowBackgroundColor" A="255" R="255" G="255" B="255" />
    <Color x:Key="AccentColor" A="255" R="0" G="147" B="231" />
    <Color x:Key="LightAccentColor" A="255" R="42" G="175" B="252" />
    <Color x:Key="DarkAccentColor" A="255" R="0" G="111" B="174" />
    <Color x:Key="AccentedTextColor" A="255" R="0" G="147" B="231" />
    <Color x:Key="DarkTextColor" A="255" R="41" G="41" B="41" />
    <Color x:Key="LightTextColor" A="255" R="107" G="107" B="107" />
    
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{DynamicResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="LightAccentBrush" Color="{DynamicResource LightAccentColor}" />
    <SolidColorBrush x:Key="DarkAccentBrush" Color="{DynamicResource DarkAccentColor}" />
    <SolidColorBrush x:Key="AccentedTextBrush" Color="{DynamicResource AccentedTextColor}" />
    <SolidColorBrush x:Key="DarkTextBrush" Color="{DynamicResource DarkTextColor}" />
    <SolidColorBrush x:Key="LightTextBrush" Color="{DynamicResource LightTextColor}" />
</ResourceDictionary>